#!/usr/bin/env node

var wp = require(__dirname + '/../');

var arg = 'fb';
var option = 's';

var browser = wp.findBrowser(option);
if (!browser) {
	browser = wp.defaultBrowser;
}

var place = wp.findPlace(arg) || {};
var url = place.url || arg;

browser.open(url);
// browser.commandToOpen(url) => 'open -a "safari" "http://facebook.com"'

// こちら側で実行するカタチにするなら↓
// exec(browser.commandToOpen(url), function(err, stdout, stderr){
// 	/* some process */
// });

// 環境を定義
// wp.defineEnv('mac');

// 定義したbrowserやplaceを保存
// wp.save();