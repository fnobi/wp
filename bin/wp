#!/usr/bin/env node

var commander = require('commander'),
    pkj       = require(__dirname + '/../package.json'),
    wp        = require(__dirname + '/../');

commander
	.version(pkj.version)
	.parse(process.argv);

var arg = commander.args.shift();
var option = 's';

var browser = wp.Browser.find(option);
if (!browser) {
	browser = wp.Browser.defaultBrowser;
}

var place = wp.Place.find(arg) || {};
var url = place.url || arg;

browser.open(url, function (err, res) {
	if (err) {
		console.error(err);
		return;
	}
});

// 環境を定義
// wp.defineEnv('mac');

// 定義したbrowserやplaceを保存
// wp.save();